<p id="notice"><%= notice %></p>
<main>
    <div class="diaries-inside">
      <div class="inside">
      <p>
        <strong>ID:</strong>
        <%= @diary.id %>
      </p>

      <p>        
        <strong>タイトル:</strong>
        <%= @diary.title %>
      </p>

      <p>  
        <strong>本文:</strong>
        <%= @diary.body %>
      </p>

      <p>
        <strong>登録日時:</strong>
        <%= @diary.created_at %>
      </p>

      <p>       
        <strong>更新日時:</strong>
        <%= @diary.updated_at %>
      </p>
    </div>
    <div class="diary-detail2">
      <%= link_to '編集', edit_diary_path(@diary) %> |
      <%= link_to '削除', @diary, method: :delete, data: { confirm: '本当に削除しますか？'} %> |
      <%= link_to '一覧に戻る', diaries_path %>
    </div>
</main>